generator client {
  provider = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  email     String @unique
  name      String?
  password  String
  wins      Int    @default(0)
  losses    Int    @default(0)
  tie       Int    @default(0)
}

model Session {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  user1Id   String
  user2Id   String?
}